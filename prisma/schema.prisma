// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  login    String  @unique
  password String?
  items    Item[]
}

model Item {
  id     String  @id @default(auto()) @map("_id") @db.ObjectId
  user   User?   @relation(fields: [userId], references: [id])
  userId String? @db.ObjectId

  name        String
  image       String
  rating      Int
  status      Status
  type        Type
  restriction String
  genres      String[]
  time        Time
}

enum Status {
  progress
  planned
  completed
  postponed
  abandoned
}

enum Type {
  movie
  series
  game
  book
}

type Time {
  count    Int
  duration Int
}
